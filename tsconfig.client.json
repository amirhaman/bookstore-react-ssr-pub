{
  "include": ["src"],
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
  },
  "exclude": ["node_modules", "src/stories/components/*.stories.tsx", "src/**/*.test.tsx"]
}